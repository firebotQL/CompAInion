{
  "manifest_version": 3,
  "name": "CompAInion",
  "version": "1.0",
  "permissions": ["storage"],
  "web_accessible_resources": [
    {
      "resources": ["/assets/*.png"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/images/favicon16.png",
      "32": "/images/favicon32.png"
    }
  },
  "icons": {
    "16": "/images/favicon16.png",
    "32": "/images/favicon32.png",
    "48": "/images/icon48.png",
    "128": "/images/icon128.png"
  }
}
